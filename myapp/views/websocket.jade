doctype html

html
  head
    meta(charset='utf-8')
    title KPSimple
    script.
        script(src='../api/jquery.min.js', type='text/javascript');
        script(type='text/javascript').var pathToWebsocketServer = "ws://sofia2.com/sib/api_websocket";
        script(type='text/javascript', src='../api/sofia2-api-js_v2.15.0.js');
        
        var nome = "teste";
        alert(nome);
  body
    // div principal no selectable
    div
      | SIB address
      input#sibAddress(size='35', value='ws://sofia2.com/sib/api_websocket')
    div
      | token 
      input#sibToken(size='35', value='b05cde7ef59745f5acd913709d3f298f')
    div
      | ontologia 
      input#sibOntology(size='35', value='semaforoInteligente5')
    div
      | kp 
      input#sibKp(size='35', value='kpSemaforoInteligente5')
    div
      | instance 
      input#sibInstance(size='35', value='WebSocket')
    div
      button#myButton(onclick='conectarSIBConToken();') Conectar SIB
      button#myButton(onclick='desconectarSIB();') Desconectar SIB
    div
      button#myButton(onclick='suscribirSIB();') Suscribir SIB
      button#myButton(onclick='desuscribirSIB();') Desuscribir SIB
    div
      | Measure
      input#inputMessage(size='25', value='15')
    div
      button#buttonReset(onclick='sendCustomMessage();') send message
      button#myButton(onclick='clearLog();') Clear
    div
      textarea#textArea(rows='10', cols='52') Hola KPSimple
